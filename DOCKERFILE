# Use official Python image as base
FROM python:3.10-slim

# Set working directory inside Docker container
WORKDIR /app

# Copy requirements file if you have one; otherwise list dependencies explicitly
COPY requirements.txt .

# Install system dependencies for ffmpeg and other tools
RUN apt-get update && apt-get install -y ffmpeg && apt-get clean && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the app source code into container
COPY . .

# Expose the port Streamlit will run on
EXPOSE 8501

# Command to run the Streamlit app
CMD ["streamlit", "run", "app.py", "--server.port=8501", "--server.address=0.0.0.0", "--server.headless=true"]
